page{
  background-color: #ccc;
}
.mySwiper{
  height: 100%;
}
.slider{
  width: 100%;
  height: 390rpx;
  overflow: hidden;
}

.slider image{
  width: 100%;
  height: 390rpx;
}

.nav-img{
  width: 80rpx;
  height: 80rpx;
}
.slider-nav{
  display: flex;
  flex-wrap:wrap;
}
.nav{
  width: 33.33333%;
  display: flex;
  flex-direction: column;
  justify-content: center;
    align-items: center;
  box-sizing: border-box;
  font-size: 16px;
  position: relative;
  
  
 /* border-right: 1rpx solid #ccc;*/
 
  border-bottom: 1rpx solid #ccc;
  padding: 20rpx 0rpx;
}

