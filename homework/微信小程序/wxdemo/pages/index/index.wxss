  margin-top: 20rpx
  
}
.enter-img{
  width: 320rpx;
  height: 178rpx;
}

.enter-nav{
  display: flex;
  justify-content: center;
  width: 50%;
}

.slider-nav,.enter{
  background-color: #fff;
}
